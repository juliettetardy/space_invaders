from tkinter import Canvas

class Ship:
    def __init__(self, PosX, PosY, life, Canevas): # Création du vaisseau et de sa position initiale. Initialisation du nombre de vies
        self.x = PosX
        self.y = PosY
        self.apparence = Canvas.create_oval(self.x-10, self.y-10, self.x+10, self.y+10, width = 5, outline = 'black', fill = 'red')
        self.life = life 
    
    def coord_ship(self): # On récupère les coordonnées actuelles du vaisseau
        return self.x

    def right_move(self, evt):
        if self.x > 0 : # Le vaisseau est dans le cadran, il ne peux pas aller plus loin que le bord gauche.
            Canevas.move(self.apparence, 10, 0)
    
